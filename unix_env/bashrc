  . ~/.bashrc.local
fi

alias ls="ls --color=auto"
alias la="ls -la"
alias lr="ls -laR"
alias lt="ls -lt"
alias j="jobs -l"
alias mo="more"
alias m="make"
alias m0="make OPT=O0"
alias mi="make install"
alias mc="make clean"
alias mcd="make clean_dist"
alias md="make debug"
alias ml="make log"
